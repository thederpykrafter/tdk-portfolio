@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap");

@tailwind base;
@tailwind components;
@tailwind utilities;


@layer base {
    html {
        @apply bg-primary-light dark:bg-primary-dark;
        @apply font-poppins text-xl text-gray-300;
    }

    a,
    button {
        @apply hover:animate-pulse;
    }
}
